extends layout
block content
  h1 Parse result
  div
    label Sentence: 
    label #{sentence}
  div
    label Length: 
    label #{N}
  h2 Cocke-Younger-Kasami pure bottom up
  div
    label Parsing time: 
    label #{parsing_time_CYK} ms
  div
    label In language: 
    label #{in_language_CYK}
  br
  div
    table(border="1px")
        tr
          td=""
          td=""
          each word in sentence
            td(width="50px", height="30px", align="center")=word
        tr
          td=""
          - for (var i = 0; i <= N; i++) {
              td(width="50px", height="30px", align="center")=i
          - }
        - for (var i = 0; i < N; i++) {
          tr
            td(width="30px", height="50px", align="center")=i
            - for (var j = 0; j <= N; j++) {
                td(width="50px", height="50px", align="left")=JSON.stringify(chart_CYK.get_items_from_to(i, j))
            - }
        - }